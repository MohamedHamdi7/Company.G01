@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

@if(!string.IsNullOrEmpty(TempData["Message"]as string))
{
    <div class="m-3 alert alert-danger">
        <p>@TempData["Message"]</p>
    </div>
}

<h1>All Department</h1>
<br />
<br />
<div class="container m-4">
    <div class="row justify-content-center">
        <div class="col-6">
            <input placeholder="Search" name="SearchInput" class="form-control" />
        </div>
        <div class="col-6">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
    </div>
</div>
<a asp-action="Create"asp-controller="Department"class="btn btn-primary">Create Department</a>

<br />
<br />

@if(Model.Count()>0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Code</th>
                <th>Name</th>
                <th>Date Of Cration</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt</td>

                    <partial name="_ButtonPartialView" model="@item.Id" />




                </tr>

              
            }
        </tbody>
    </table>
}else{
    <div class="mt-4 alert alert-info">
        <h4>
            There are no Department :(
        </h4>
    </div>
}



